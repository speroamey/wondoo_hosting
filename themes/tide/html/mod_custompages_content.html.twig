{% extends request.ajax ? "layout_blank.html.twig" : "layout_default.html.twig" %}
{% block meta_title %}{{ page.title }}{% endblock %}
{% block page_header %}{{ page.title }}{% endblock %}
{% block meta_description %}{{ page.description }}{% endblock %}
{% block meta_keywords %}{{ page.keywords }}{% endblock %}
{% block breadcrumb %}<li class="breadcrumb-item active" aria-current="page"><a href="#">{{ page.title }}</a></li>{% endblock %}
{% block body_class %}custom-page{% endblock %}
{% block content %}
<div class="row row-deck row-cards">
   <div class="col-md-12">
      <div class="card mb-3">
         <div class="card-header">
            <h3 class="card-title">{{ page.title }}</h3>
         </div>
         <div class="card-body">
            {{ page.content | markdown }}
         </div>
      </div>
   </div>
</div>
{% endblock %}