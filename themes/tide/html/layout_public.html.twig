<!doctype html>
<html lang="en">
   <head>
      <meta charset="utf-8"/>
      <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover"/>
      <meta http-equiv="X-UA-Compatible" content="ie=edge"/>
      <title>{% block meta_title %}{{ settings.meta_title }}{% endblock %}</title>
      <meta name="msapplication-TileColor" content=""/>
      <meta name="theme-color" content=""/>
      <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent"/>
      <meta name="apple-mobile-web-app-capable" content="yes"/>
      <meta name="mobile-web-app-capable" content="yes"/>
      <meta name="HandheldFriendly" content="True"/>
      <meta name="MobileOptimized" content="320"/>
      <link rel="icon" href="{{ guest.system_company.favicon_url }}" type="image/x-icon"/>
      <link rel="shortcut icon" href="{{ guest.system_company.favicon_url }}" type="image/x-icon"/>
      <meta name="description" content="{% block meta_description %}{{ settings.meta_description }}{% endblock %}"/>
      <meta property="bb:url" content="{{ constant('SYSTEM_URL') }}">
      <meta property="bb:client_area" content="{{ '/'|link }}">
      <meta name="csrf-token" content="{{ CSRFToken }}">
      <meta name="robots" content="{{ settings.meta_robots }}">
      <meta name="author" content="{{ settings.meta_author }}">
      <meta name="generator" content="FOSSBilling {{ guest.system_version }}">
      <meta name="canonical" content="{{ constant('SYSTEM_URL') }}">
      {% block opengraph %}{% endblock %}
      <!-- CSS files -->
      <link href="{{ 'css/tabler.min.css' | asset_url }}" rel="stylesheet"/>
      <link href="{{ 'css/tabler-flags.min.css' | asset_url }}" rel="stylesheet"/>
      <link href="{{ 'css/tabler-payments.min.css' | asset_url }}" rel="stylesheet"/>
      <link href="{{ 'css/tabler-vendors.min.css' | asset_url }}" rel="stylesheet"/>
	  <link href="{{ 'css/custom.css' | asset_url }}" rel="stylesheet"/>
      <script src="{{ "Api/API.js?v=#{guest.system_version}" | library_url }}"></script>
      <script src="{{ 'js/jquery-3.7.0.min.js' | asset_url }}"></script>
      <script src="{{ 'js/bb-jquery.js' | asset_url }}"></script>
      {# <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@tabler/icons-webfont@latest/dist/tabler-icons.min.css" /> #}

      <style>
         @import url('https://rsms.me/inter/inter.css');
         :root {
         --tblr-font-sans-serif: 'Inter Var', -apple-system, BlinkMacSystemFont, San Francisco, Segoe UI, Roboto, Helvetica Neue, sans-serif;
         }
         body {
         font-feature-settings: "cv03", "cv04", "cv11";
         }
      </style>
      {% block head %}{% endblock %}
      {% block js %}{% endblock %}
   </head>
   <body class="{% block body_class %}{% endblock %}">
      {% block body %}{% endblock %}
      {% include 'partial_pending_messages.html.twig' ignore missing %}
      <script src="{{ 'js/tabler.min.js' | asset_url }}" defer></script>
   </body>
</html>
